{
  "name": "designo-theme",
  "version": "1.0.0",
  "description": "WordPress theme for Designo website, based on _s starter theme.",
  "author": "yamagatagaku",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1",
    "sass": "^1.97.1"
  },
  "scripts": {
    "sass": "sass --watch assets/scss/style.scss assets/css/style.css",
    "serve": "browser-sync start --proxy \"http://designo.local/\" --files \"**/*.php, assets/css/*.css, assets/js/*.js\"",
    "dev": "concurrently \"npm run sass\" \"npm run serve\""
  }
}
